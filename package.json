{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "mpv-launcher",
  "title": "MPV Launcher",
  "description": "Browse and play media files using MPV player",
  "icon": "icon.png",
  "author": "the_revolution",
  "categories": [
    "Media"
  ],
  "license": "MIT",
  "platforms": [
    "Windows"
  ],
  "commands": [
    {
      "name": "mpv-launcher",
      "title": "Play",
      "description": "Browse and play media files",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "animeDirectory",
      "title": "Путь к аниме",
      "description": "Full path to your anime directory",
      "type": "textfield",
      "required": true,
      "default": "V:/Videos/Аниме"
    },
    {
      "name": "animeArguments",
      "title": "Аргументы для аниме",
      "description": "Command line arguments for anime",
      "type": "textfield",
      "required": false,
      "default": ""
    },
    {
      "name": "seriesDirectory",
      "title": "Путь к сериалам",
      "description": "The directory where your series are stored.",
      "type": "textfield",
      "required": true,
      "default": "V:/Videos/Series"
    },
    {
      "name": "seriesArguments",
      "title": "Аргументы для сериалов",
      "description": "Command line arguments for series",
      "type": "textfield",
      "required": false,
      "default": ""
    },
    {
      "name": "filmsDirectory",
      "title": "Путь к фильмам",
      "description": "Full path to your films directory",
      "type": "textfield",
      "required": true,
      "default": "V:/Videos/Фильмы"
    },
    {
      "name": "filmsArguments",
      "title": "Аргументы для фильмов",
      "description": "Command line arguments for films",
      "type": "textfield",
      "required": false,
      "default": ""
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.0",
    "@raycast/utils": "^2.2.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "24.9.1",
    "@types/react": "19.2.2",
    "eslint": "^9.38.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
